                <ImageBrush ImageSource="Inne/wózek.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button Name="btnRozpatrzone" Content="Historia zamówień" HorizontalAlignment="Left" VerticalAlignment="Top" Width="134" Margin="180,42,0,0" Height="135" FontWeight="Bold" TextOptions.TextHintingMode="Animated" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Click="btnRozpatrzone_Click">
            <Button.Background>
                <ImageBrush ImageSource="Inne/historia.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
