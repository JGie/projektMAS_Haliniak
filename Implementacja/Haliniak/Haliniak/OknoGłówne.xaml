        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="235" Width="343" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF409ADE" Icon="ikonaHaliniak.ico">
